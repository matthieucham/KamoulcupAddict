<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kamoulcup.mobile.addict"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_kcup"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.kamoulcup.mobile.addict.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kamoulcup.mobile.addict.GetAuctionResultsActivity"
            android:label="@string/title_activity_get_auction_results"
            android:parentActivityName="com.kamoulcup.mobile.addict.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kamoulcup.mobile.addict.MainActivity" />
        </activity>
        <activity
            android:name="com.kamoulcup.mobile.addict.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.kamoulcup.mobile.addict.CreditsActivity"
            android:label="@string/title_activity_credits"
            android:parentActivityName="com.kamoulcup.mobile.addict.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kamoulcup.mobile.addict.MainActivity" />
        </activity>
    </application>

</manifest>